{
    "name": "send-request-demo",
    "version": "1.0.0",
    "description": "A simple website to test sendRequest function",
    "scripts": {
        "start": "http-server . -c-1",
        "build": "tsup src/",
        "watch": "tsup src/ --watch",
        "dev": "concurrently \"pnpm run watch\" \"pnpm run start\"",
        "version": "cat node_modules/laser-mace/package.json | grep version",
        "link-laser-mace": "pnpm link --global laser-mace"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "http-server": "^14.1.1",
        "laser-mace": "github:ahoff-git/laser-mace",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2"
    }
}
