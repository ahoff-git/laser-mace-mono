{
  "name": "laser-mace-mono",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo that groups the laser-mace family of packages.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "fetch:laser-mace": "./scripts/sync-package.sh laser-mace packages/laser-mace",
    "fetch:laser-mace-engine": "./scripts/sync-package.sh laser-mace-engine packages/laser-mace-engine",
    "fetch:laser-mace-testing": "./scripts/sync-package.sh laser-mace-testing packages/laser-mace-testing",
    "build:laser-mace-testing": "pnpm --filter ./packages/laser-mace-testing run build",
    "start:laser-mace-testing": "pnpm --filter ./packages/laser-mace-testing run start",
    "dev:laser-mace-testing": "pnpm --filter ./packages/laser-mace-testing run dev",
    "vercel-build": "pnpm run build:laser-mace-testing"
  },
  "packageManager": "pnpm@9.12.3"
}
